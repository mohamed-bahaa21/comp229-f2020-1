<%- include('./partials/head.ejs') %>
<%- include('./partials/nav.ejs') %>


<!-- ---------------------------- WORK-SPACE ----------------------------- -->
<div class="container" style="margin-top: 25px">
    <% include('./partials/messages') %>
</div>

<div style="padding: 25px 0 100px 0; margin: 25px">

    <div class="container" style="padding: 0 0 50px 0">
        <h1 class="mt-4"
            style="background-color: white; padding: 25px 0px; display: inline-block; border-bottom: 3px solid var(--google-blue)">
            Workspace</h1>
        <p class="lead mb-3" style="display: inline-block; opacity: 0.7; margin-left: 25px">Welcome
            <%= user.name %> !

        </p>
    </div>

</div>









<!-- ------------------- Team --------------------- -->
<div style="background-image: linear-gradient(to right, #0acffe 0%, #495aff 100%); padding: 50px 0;">

    <div class="container shadow">
        <span class="mt-2"
            style="font-size: 2.5rem; border-bottom: 2px solid var(--white); color: white; padding: 15px 15px; display: inline-block;">
            Team</span>
        <p style="display: inline-block; color: white; font-size: 1.1rem; margin-left: 25px">View
            team details.</p>


        <div class="table-responsive">
            <table class="table table-striped table-hover" style="max-width: 100%; margin-top: 0px; background-color: white;
           border-radius: 15px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">
                            <h5>Name</h5>
                        </th>
                        <th scope="col">
                            <h5>Email</h5>
                        </th>
                        <th scope="col">
                            <h5>Occupation</h5>
                        </th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% var total_num=0; %>


                            <% contacts.forEach( function(user) { %>

                                <% total_num++ %>
                                    <th scope="row">
                                        <%= total_num %>
                                    </th>
                                    <td>
                                        <!-- One Student -->

                                        <!-- student name + Accepted/NotAccepted -->
                                        <h5 style="display: inline-block">
                                            <%= user.name %>
                                        </h5>

                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.user_type.student.workAs %>
                                    </td>
                                    <td>
                                        <!-- Accept Not Accepted Students -->
                                        <% if(!user.user_type.student.accepted){ %>
                                            <% notAccepted_num++; %>
                                                <form style="display: inline; margin: 0px 15px"
                                                    action="/users/accept-student" method="POST">
                                                    <input type="hidden" name="userId" id="userId"
                                                        value="<%= user.id %>">
                                                    <button type="submit"
                                                        class="gradient-button btn btn-primary btn-inline-block">Accept</button>
                                                </form>
                                                <% } else { %>
                                                    <button type="submit"
                                                        class="gradient-button btn btn-primary btn-inline-block"
                                                        style="margin: 0px 15px" disabled>Accepted
                                                        !</button>
                                                    <% accepted_num++; %>
                                                        <% } %>
                                    </td>
                                    <td>
                                        <!-- delete student button -->
                                        <form style="display: inline; margin: 0px 15px" action="/users/delete-student"
                                            method="POST">
                                            <input type="hidden" name="userId" id="userId" value="<%= user.id %>">
                                            <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                                                    class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                    <td>
                                        <!-- Contact Student -->
                                        <a href="mailto:" class="gradient-button btn btn-primary"><i
                                                class="fas fa-envelope"></i></a>
                                        <div class="modal fade" id="contact" tabindex="-1" role="dialog"
                                            aria-labelledby="contactLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="contactLabel">New
                                                            message</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label for="student-email" class="col-form-label">Student
                                                                Email:</label>
                                                            <input type="text" class="form-control" id="student-email">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="message-text"
                                                                class="col-form-label">Message:</label>
                                                            <textarea class="form-control" id="message-text"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Send
                                                            message</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                    </tr>
                    <% }); %>
                        <h3
                            style="margin: 25px 25px; border: 2px solid var(--white); border-radius: 100%; float:right; padding: 17px 15px; color: var(--white);">
                            <%= total_num %>
                        </h3>

                </tbody>
            </table>
        </div>

    </div>
</div>

<%- include('./partials/footer.ejs') %>