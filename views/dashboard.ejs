<%- include('./partials/head.ejs') %>
    <%- include('./partials/nav.ejs') %>


        <!-- ---------------------------- WORK-SPACE ----------------------------- -->
        <div class="container" style="margin-top: 25px">
            <% include('./partials/messages') %>
        </div>

        <div style="padding: 25px 0 100px 0; margin: 25px">

            <div class="container" style="padding: 0 0 50px 0">
                <h1 class="mt-4"
                    style="background-color: white; padding: 25px 0px; display: inline-block; border-bottom: 3px solid var(--google-blue)">
                    Dashboard</h1>
                <p class="lead mb-3" style="display: inline-block; opacity: 0.7; margin-left: 25px">Welcome
                    <%= user.name %> !

                </p>
            </div>

        </div>









        <!-- ------------------- Team --------------------- -->
        <style>
            tr {
                opacity: 0.75;
            }

            tr:hover {
                opacity: 1;
            }
        </style>
        <div style="background-image: linear-gradient(to right, #0acffe 0%, #495aff 100%); padding: 50px 0;">

            <div class="container shadow">
                <span class="mt-2"
                    style="font-size: 2.5rem; border-bottom: 2px solid var(--white); color: white; padding: 15px 15px; display: inline-block;">
                    Contacts</span>
                <p style="display: inline-block; color: white; font-size: 1.1rem; margin-left: 25px">View Business
                    Contacts
                    List.</p>


                <div class="table-responsive">
                    <table class="table table-striped table-hover" style="max-width: 100%; margin-top: 0px; background-color: white;
           border-radius: 15px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">
                                    <h5>FirstName</h5>
                                </th>
                                <th scope="col">
                                    <h5>Last Name</h5>
                                </th>
                                <th scope="col">
                                    <h5>Email</h5>
                                </th>
                                <th scope="col">
                                    <h5>Phone</h5>
                                </th>
                                <th scope="col">
                                    <h5>Message</h5>
                                </th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <% var total_num=0; %>


                                    <% contacts.forEach( function(user) { %>

                                        <% total_num++ %>
                                            <th scope="row">
                                                <%= total_num %>
                                            </th>
                                            <td>
                                                <!-- One Student -->

                                                <!-- student name + Accepted/NotAccepted -->
                                                <h5 style="display: inline-block">
                                                    <%= user.first_name %>
                                                </h5>

                                            </td>
                                            <td>
                                                <%= user.last_name %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <%= user.phone_number %>
                                            </td>
                                            <td>
                                                <%= user.message %>
                                            </td>
                                            <td>
                                                <!-- Delete Contact -->
                                                <form style="display: inline; margin: 0px 15px"
                                                    action="/dashboard/delete" method="POST">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                                    <input type="hidden" name="userId" id="userId"
                                                        value="<%= user.id %>">
                                                    <button type="submit"
                                                        class="gradient-button btn btn-primary btn-inline-block">Delete</button>
                                                </form>
                                            </td>
                                            <td>
                                                <!-- Update Contact button -->
                                                <form action="/dashboard/update" method="post">
                                                    <style>
                                                        input {
                                                            display: block !important;
                                                        }
                                                    </style>


                                                    <button type="submit"
                                                        class="gradient-button btn btn-primary btn-inline-block"
                                                        onclick="window.location.href='#get-early-access'">Update</button>

                                                    <%- include('./partials/update-contact.ejs') %>
                                                </form>
                                            </td>
                            </tr>
                            <% }); %>
                                <h3
                                    style="margin: 25px 25px; border: 2px solid var(--white); border-radius: 100%; float:right; padding: 17px 15px; color: var(--white);">
                                    <%= total_num %>
                                </h3>

                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        <%- include('./partials/footer.ejs') %>